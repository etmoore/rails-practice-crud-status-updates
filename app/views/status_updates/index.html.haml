%h1 Status Updates
= link_to "New Status Update", new_status_update_path
%table
  %thead
    %tr
      %th User
      %th Status
      %th Likes
      %th
  %tbody
    - @status_updates.each do |status_update|
      %tr
        %td= status_update.user
        %td= status_update.status
        %td= status_update.likes
        %td
          = link_to "Show", status_update
          = link_to "Edit", edit_status_update_path(status_update)
          = link_to "Delete", status_update, method: :delete, data: { confirm: 'Are you sure?' }
